%div#tasks
  %div{ :class => "list" }
    %div.header
      %div.left
        %div
          = @list.name
      %div.delete
        = link_to list_path(@list), :remote => true, :method => :delete do
          Delete
    %div{ :class => "new-task" }
      = render "tasks/form", :list => @list
    %ul#tasks{ "data-id" => @list.id }
      = render tasks.ordered
    %div.footer