%li{ "data-id" => task.id, :class => "task #{link_class(task)}" }
  %div.handle
    = link_to "delete", list_task_path(task.list, task), :remote => true, :method => :delete
  %div.task_title
    = link_to toggle_complete_list_task_path(task.list, task), :remote => true, :method => :put do
      = task.task