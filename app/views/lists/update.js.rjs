case params[:context]
when "title" then
  data = {
    :list_id => @list.id,
    :name    => @list.name
  }
  @list.channel.trigger "lists-update_title", data, params[:socket_id] if @list.shared?
  page.trigger          "lists:update:title", data
else
  data = {
    :list_id   => @list.id.to_s,
    :list_html => render(@list)
  }
  @list.channel.trigger "lists-update", data, params[:socket_id]
  page.trigger          "lists:update", data
end
